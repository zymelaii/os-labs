{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.inlayHints.enabled": "off",
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "extensions.ignoreRecommendations": false,
    "xml.validation.enabled": false,
    "files.associations": {
        "*.asm": "asm-intel-x86-generic",
        "*.inc": "asm-intel-x86-generic",
        "*.inc.inc": "asm-intel-x86-generic",
        "*.ld": "linkerscript",
        "*.ld.inc": "linkerscript",
        "*.h.in": "c",
        "gdb_init_real_mode.txt": "gdb",
    },
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
    },
    "clangd.onConfigChanged": "restart",
    "clangd.restartAfterCrash": true,
    "clangd.arguments": [
        "--enable-config",
        "--compile-commands-dir=build",
        "--clang-tidy",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--background-index",
        "--pch-storage=disk",
        "-j=8"
    ],
    "bookmarks.saveBookmarksInProject": true,
    "bookmarks.wrapNavigation": true,
    "todo-tree.highlights.enabled": true,
    "todo-tree.regex.regex": "(//!?(!<)?|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.tree.flat": true,
    "todo-tree.general.tags": [
        "WARNING",
        "WARN",
        "TODO",
        "NOTE",
        "HINT",
        "FIXME",
        "FIX",
        "BUG",
        "ATTENTION",
    ],
    "todo-tree.general.tagGroups": {
        "TODO": [
            "TODO",
        ],
        "FIXME": [
            "FIXME",
            "FIX",
        ],
        "WARNING": [
            "WARNING",
            "WARN",
        ],
        "BUG": [
            "BUG",
        ],
        "NOTE": [
            "NOTE",
            "HINT",
        ],
        "ATTENTION": [
            "ATTENTION",
        ],
    },
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#569cd6",
        "borderRadius": "0.1em",
        "fontWeight": "bold",
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "check-circle",
            "iconColour": "#0a950a",
            "background": "#0a950a",
            "foreground": "#f0f0f0",
        },
        "FIXME": {
            "icon": "flame",
            "iconColour": "#ed7f18",
            "background": "#ed7f18",
            "foreground": "#3e3e3e",
        },
        "WARNING": {
            "icon": "warning",
            "iconColour": "#fa973a",
            "background": "#fa973a",
            "foreground": "#3e3e3e",
        },
        "BUG": {
            "icon": "bug",
            "iconColour": "#cd5555",
            "background": "#cd5555",
            "foreground": "#f0f0f0",
        },
        "NOTE": {
            "icon": "info",
            "iconColour": "#569cd6",
            "foreground": "#569cd6",
            "fontWeight": "regular",
        },
        "ATTENTION": {
            "icon": "star-fill",
            "iconColour": "#e4e424",
            "foreground": "#e4e424",
        },
    }
}
